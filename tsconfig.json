{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "target": "es2018",
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
  ]
}