{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "baseUrl": "src",
    "rootDirs": ["src", "tests"],
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "tests"
  ]
}